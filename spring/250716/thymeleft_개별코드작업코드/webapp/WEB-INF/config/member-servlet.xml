<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

    <context:component-scan base-package="member"/>
    <mvc:resources mapping="/member/**" location="/static/" />
    <mvc:annotation-driven/>

    <beans:bean id="templateResolverMember"
        class="org.thymeleaf.spring5.templateresolver.SpringResourceTemplateResolver">
        <beans:property name="prefix" value="/WEB-INF/views/member/" />
        <beans:property name="suffix" value=".html" />
        <beans:property name="templateMode" value="HTML" />
        <beans:property name="characterEncoding" value="UTF-8" />
        <beans:property name="order" value="1" /> <beans:property name="checkExistence" value="true" /> </beans:bean>

    <beans:bean id="templateResolverFragments"
        class="org.thymeleaf.spring5.templateresolver.SpringResourceTemplateResolver">
        <beans:property name="prefix" value="/WEB-INF/views/" />
        <beans:property name="suffix" value=".html" />
        <beans:property name="templateMode" value="HTML" />
        <beans:property name="characterEncoding" value="UTF-8" />
        <beans:property name="order" value="2" /> <beans:property name="checkExistence" value="true" />
    </beans:bean>

    <beans:bean id="templateEngine"
        class="org.thymeleaf.spring5.SpringTemplateEngine">
        <beans:property name="templateResolvers">
            <beans:set>
                <beans:ref bean="templateResolverMember" />
                <beans:ref bean="templateResolverFragments" />
            </beans:set>
        </beans:property>
        <beans:property name="enableSpringELCompiler" value="true" />
        <beans:property name="additionalDialects">
            <beans:set>
                <beans:bean class="nz.net.ultraq.thymeleaf.layoutdialect.LayoutDialect"/>
            </beans:set>
        </beans:property>
    </beans:bean>

    <beans:bean id="thymeleafViewResolver"
        class="org.thymeleaf.spring5.view.ThymeleafViewResolver">
        <beans:property name="templateEngine" ref="templateEngine" />
        <beans:property name="order" value="1" />
        <beans:property name="characterEncoding" value="UTF-8" />
        <beans:property name="contentType" value="text/html; charset=UTF-8" />
        <beans:property name="viewNames" value="*" />
    </beans:bean>

</beans:beans>